rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is a participant in the chat
    function isParticipant(chatData) {
      return request.auth.uid in chatData.participants;
    }

    // Items collection
    match /lost-found-items/{itemId} {
      allow read: if true; // Public read access
      allow create: if isAuthenticated(); // Only logged-in users can post
      allow update, delete: if isAuthenticated() && request.auth.uid == resource.data.authorId; // Only author can edit/delete
    }

    // Chats collection
    match /chats/{chatId} {
      // Allow create if authenticated and user is one of the participants
      allow create: if isAuthenticated() && request.resource.data.participants.hasAll([request.auth.uid]);
      
      // Allow read if user is a participant
      allow read: if isAuthenticated() && isParticipant(resource.data);
      
      // Allow update (e.g. updating lastMessage) if user is a participant
      allow update: if isAuthenticated() && isParticipant(resource.data);

      // Messages subcollection
      match /messages/{messageId} {
        // Allow read/write if user is a participant of the parent chat
        // Note: We need to get the parent chat data to verify participants
        allow read, write: if isAuthenticated() && isParticipant(get(/databases/$(database)/documents/chats/$(chatId)).data);
      }
    }
  }
}
